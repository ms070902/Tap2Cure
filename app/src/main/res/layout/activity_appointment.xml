<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Appointment"
        android:textColorLink="#00FFFFFF"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="Available Time Slots :"
        android:textSize="15dp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/slot1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8AM-10AM" />

        <RadioButton
            android:id="@+id/slot2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10AM-12PM" />

        <RadioButton
            android:id="@+id/slot3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12PM-3PM" />

        <RadioButton
            android:id="@+id/slot4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3PM-6PM" />

        <RadioButton
            android:id="@+id/slot5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6PM-9PM" />
    </RadioGroup>

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"

        android:text="Note:The fees charge will totally depend on the medication and decided by the doctor"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="130dp"

        android:src="@drawable/logologo" />


</LinearLayout>