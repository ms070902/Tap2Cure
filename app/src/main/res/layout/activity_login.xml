<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginBottom="0dp"


    android:orientation="vertical"
    tools:context=".MainActivity">




    <ImageView
        android:id="@+id/petizoologo"

        android:layout_width="200dp"
        android:layout_height="180dp"

        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:src="@drawable/finalfullogo"
        android:layout_marginTop="15dp"

        />

    <ImageView
        android:id="@+id/img_google"
        android:layout_width="80dp"
        android:layout_marginTop="30dp"
        android:layout_height="100dp"
        android:layout_below="@+id/petizoologo"
        android:src="@drawable/google"
        android:layout_centerHorizontal="true"/>









    <Button
        android:id="@+id/btn_google"
        android:layout_below="@+id/img_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="140dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="25dp"

        android:foregroundGravity="top|left|bottom|right"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Google
        SignIn"

        android:textSize="15sp"

        app:iconGravity="textEnd|top|textTop|end|textStart" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_below="@+id/btn_google"
        android:src="@drawable/doctorpic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"/>


</RelativeLayout>